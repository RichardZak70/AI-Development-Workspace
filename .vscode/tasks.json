{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Python: Setup Environment",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "venv",
                ".venv"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Python: Install Dependencies",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/pip.exe",
            "args": [
                "install",
                "-r",
                "requirements.txt"
            ],
            "group": "build",
            "dependsOn": "Python: Setup Environment",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Python: Run Quality Checks",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "-m",
                "ruff",
                "check",
                "."
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "C/C++: Build Project",
            "type": "shell",
            "command": "make",
            "args": [
                "all"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "C/C++: Clean Build",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "C/C++: Run Static Analysis",
            "type": "shell",
            "command": "make",
            "args": [
                "analyze"
            ],
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Java: Build Project",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                "build",
                "src/**/*.java"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$javac"
            ]
        },
        {
            "label": "C#: Build Project",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "C#: Run Tests",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "test"
            ],
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "SonarQube: Analyze All Files",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "$env:JAVA_HOME = 'C:\\\\Program Files\\\\Microsoft\\\\jdk-21.0.8.9-hotspot'; $env:PATH = \\\"$env:JAVA_HOME\\\\bin;$env:PATH\\\"; echo 'Java environment configured for SonarQube...'; echo 'Running SonarQube analysis on all files...'"
            ],
            "group": "build",
            "options": {
                "env": {
                    "JAVA_HOME": "C:\\\\Program Files\\\\Microsoft\\\\jdk-21.0.8.9-hotspot",
                    "PATH": "C:\\\\Program Files\\\\Microsoft\\\\jdk-21.0.8.9-hotspot\\\\bin;${env:PATH}"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Quality: Run All Checks",
            "dependsOrder": "sequence",
            "dependsOn": [
                "SonarQube: Analyze All Files"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Project: Initialize New Project",
            "type": "shell",
            "command": "python",
            "args": [
                "scripts/setup_project.py"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}