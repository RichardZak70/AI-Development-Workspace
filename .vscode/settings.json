{
    "python.defaultInterpreterPath": "./.venv/Scripts/python.exe",
    "python.terminal.activateEnvironment": true,
    "python.linting.enabled": true,
    "python.linting.ruffEnabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.lintOnSave": true,
    "python.formatting.provider": "none",
    // Language-specific formatting
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit",
            "source.organizeImports.ruff": "explicit"
        }
    },
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.formatOnSave": true,
        "editor.tabSize": 4
    },
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.formatOnSave": true,
        "editor.tabSize": 4
    },
    "[csharp]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4
    },
    "[java]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.tabSize": 2
    },
    "[yaml]": {
        "editor.tabSize": 2
    },
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.tabSize": 2
    },
    // SonarQube integration
    "sonarlint.ls.javaHome": "C:\\Program Files\\Microsoft\\jdk-21.0.8.9-hotspot",
    "java.jdt.ls.java.home": "C:\\Program Files\\Microsoft\\jdk-21.0.8.9-hotspot",
    "java.home": "C:\\Program Files\\Microsoft\\jdk-21.0.8.9-hotspot",
    "sonarlint.enableVerboseLogs": false,
    "sonarlint.disableTelemetry": true,
    "sonarlint.connectedMode.automatic.setup": false,
    "sonarlint.analyzeOpenFilesOnly": false,
    "sonarlint.enableAutomaticAnalysis": true,
    "sonarlint.connectedMode.servers": [],
    "sonarlint.pathToNodeExecutable": "",
    "sonarlint.excludeFiles": [
        "**/test_*.py",
        "**/*_test.py",
        "**/tests/**",
        "**/Example_*/**",
        "**/node_modules/**",
        "**/target/**",
        "**/bin/**",
        "**/obj/**"
    ],
    "sonarlint.rules": {
        "python:S3776": {
            "level": "on",
            "parameters": {
                "threshold": "15"
            }
        },
        "java:S3776": {
            "level": "on",
            "parameters": {
                "threshold": "15"
            }
        },
        "cpp:S3776": {
            "level": "on",
            "parameters": {
                "threshold": "15"
            }
        },
        "python:S1192": {
            "level": "on",
            "parameters": {
                "threshold": "3"
            }
        }
    },
    // General editor settings
    "files.associations": {
        "*.py": "python",
        "*.c": "c",
        "*.cpp": "cpp",
        "*.h": "c",
        "*.hpp": "cpp",
        "*.cs": "csharp",
        "*.java": "java",
        "Makefile*": "makefile"
    },
    "files.autoSave": "onFocusChange",
    "problems.decorations.enabled": true,
    "editor.rulers": [
        88,
        120
    ],
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 120,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },
    // Git settings
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    // Terminal settings
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.defaultProfile.osx": "zsh",
    // File exclusions
    "files.exclude": {
        "**/__pycache__": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/build": true,
        "**/dist": true,
        "**/*.egg-info": true,
        "**/node_modules": true,
        "**/target": true,
        "**/bin/Debug": true,
        "**/bin/Release": true,
        "**/obj": true,
        "**/.vs": true,
        "**/.gradle": true,
        "**/.idea": true
    },
    // C/C++ configuration
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.compilerPath": "gcc",
    "C_Cpp.errorSquiggles": "enabled",
    // Java configuration
    "java.configuration.updateBuildConfiguration": "automatic",
    "java.compile.nullAnalysis.mode": "automatic",
    // .NET configuration
    "dotnet.preferCSharpExtension": true,
    "omnisharp.enableEditorConfigSupport": true,
    // AI assistance
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false
    }
}