{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Project Configuration",
  "type": "object",
  "required": ["name", "description", "owner", "languages", "runtime"],
  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "description": { "type": "string", "minLength": 1 },
    "owner": {
      "oneOf": [
        { "type": "string", "minLength": 1 },
        { "type": "array", "items": { "type": "string", "minLength": 1 }, "minItems": 1 }
      ]
    },
    "team": {
      "oneOf": [
        { "type": "string", "minLength": 1 },
        { "type": "array", "items": { "type": "string", "minLength": 1 }, "minItems": 1 }
      ]
    },
    "languages": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1
    },
    "runtime": {
      "type": "string",
      "enum": ["batch", "service", "cli", "notebook", "library", "hybrid"]
    },
    "stack": {
      "description": "Optional technology stack identifiers.",
      "oneOf": [
        { "type": "string", "minLength": 1 },
        {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "minItems": 1
        }
      ]
    },
    "data_policy": {
      "type": "object",
      "properties": {
        "pii": { "type": "boolean" },
        "prod_data": { "type": "boolean" },
        "data_classification": {
          "type": "string",
          "enum": ["public", "internal", "confidential", "restricted"]
        },
        "retention_days": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": true
    },
    "repository": {
      "type": "object",
      "properties": {
        "url": { "type": "string", "minLength": 1 },
        "branch": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": true
    },
    "version": { "type": "string", "minLength": 1 },
    "status": { "type": "string", "enum": ["active", "maintenance", "deprecated", "archived"] }
  },
  "additionalProperties": true
}
